<p style="color: green"><%= notice %></p>

<h1>日記一覧画面</h1>

<div id="diaries">
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>投稿日時</th>
        <th>更新日時</th>
      </tr>
    </thead>
    <tbody>
      <% @diaries.each do |diary| %>
        <tr>
          <td><%=  diary.id %></td>
          <td><%=  link_to diary.title, diary %></td>
          <td><%=  l(diary.created_at) %></td>
          <td><%=  l(diary.updated_at) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "日記を新規作成", new_diary_path %>
